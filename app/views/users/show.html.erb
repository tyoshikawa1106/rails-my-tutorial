<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <div class="card padding">
      <section>
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
    </div>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if signed_in? %>
    <div class="card padding">
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% else %>
        <p>No Post...</p>
      <% end %>
    </div>
  </div>
</div>